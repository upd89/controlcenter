<%= render :partial => "header", :object => {
  "title" => "Packages",
  "actions" =>[{
    "icon" => "plus",
    "text" => "New Package",
    "path" => new_package_path
  }]
} %>

<table class="striped tight sortable clickableRows">
  <thead>
    <tr>
      <th>Name</th>
      <th>Section</th>
      <th>Homepage</th>
      <th colspan="2">Summary</th>
    </tr>
  </thead>

  <tbody>
    <% @paginated_packages.each do |package| %>
      <tr class="relPos">
        <td><%= package.name %></td>
        <td><%= package.section %></td>
        <td><a href="<%= package.homepage %>"><%= package.homepage %></a></td>
        <td><%= package.summary %></td>
        <td>
          <ul class="button-bar">
      	    <li><%= link_to '<i class="fa fa-arrow-right"></i>'.html_safe, package  %></li>
                  <li><%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_package_path(package) %></li>
                  <li><%= link_to '<i class="fa fa-remove"></i>'.html_safe, package, method: :delete, data: { confirm: 'Are you sure?' } %></li>
      	  </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="digg_pagination">
  <div class="page_info">
    <%= page_entries_info @paginated_packages %>
  </div>
  <%= will_paginate @paginated_packages, :container => false %>
</div>

<br>
